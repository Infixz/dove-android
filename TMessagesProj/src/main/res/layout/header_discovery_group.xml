<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#EFEFF4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white">

        <org.telegram.ui.Components.BackupImageView
            android:id="@+id/header_discover_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <com.tinfinite.ui.widget.EmojiTextView android:id="@+id/header_discover_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/header_discover_tv_language"
            android:layout_toRightOf="@id/header_discover_iv"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="18dp"
            android:singleLine="true"
            android:textColor="@android:color/black"/>

        <TextView android:id="@+id/header_discover_tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/header_discover_tv_name"/>

        <com.tinfinite.ui.widget.EmojiTextView android:id="@+id/header_discover_tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/header_discover_iv"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:textSize="14dp"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@id/header_discover_tv_name"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/greydivider"/>

</LinearLayout>