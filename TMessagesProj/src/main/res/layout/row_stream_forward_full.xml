<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView android:id="@+id/row_stream_forward_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_stream_forward_view_name"
        android:singleLine="true"
        android:textStyle="bold"
        />

    <com.tinfinite.ui.widget.LinkTextView android:id="@+id/row_stream_forward_full_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_stream_forward_view"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:autoLink="web"
        android:textColorLink="@color/dark_blue"
        />

    <com.tinfinite.ui.views.StreamImageView
        android:id="@+id/row_stream_forward_full_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"></com.tinfinite.ui.views.StreamImageView>

    <com.tinfinite.ui.views.StreamUrlThumbView
        android:id="@+id/row_stream_forward_full_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"></com.tinfinite.ui.views.StreamUrlThumbView>

</LinearLayout>