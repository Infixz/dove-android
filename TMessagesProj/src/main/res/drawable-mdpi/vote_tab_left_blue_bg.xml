<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/transparent" />
    <item android:state_focused="true" android:drawable="@drawable/transparent" />
    <item android:state_selected="true" android:drawable="@drawable/transparent" />

    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="0dp"
                android:bottomRightRadius="0dp" />
            <solid android:color="#008DF2" />
        </shape>
    </item>
</selector>